---
layout: base
---

.row
  .large-4.columns{:style=>'background:url("/images/tree.png") right center no-repeat'}
    %h1 LiveOak
    %h1.subheader Backend as a Service
  .large-8.columns.right
    .panel.blog-post
      .title
        %h2= page.title
      .author
        = page.author
      .date
        = page.date.strftime("%F")
      .body
        %p= page.content
  .large-4.columns
    .row{:style=>'text-align:center'}
      %hr
      - if (page.previous_post)
        %a{:href=>page.previous_post.url}
          &lsaquo; Earlier
      - else
        &lsaquo; Earlier
      |
      - if (page.next_post)
        %a{:href=>page.next_post.url}
          Later &rsaquo;
      - else
        Later &rsaquo;
